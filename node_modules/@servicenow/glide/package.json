{
  "name": "@servicenow/glide",
  "version": "25.0.1",
  "description": "Contains type declaration for Glide Scriptable APIs",
  "scripts":   {
    "build": "tsc --build --clean && tsc --build",
    "prebuild": "npm run copy && tsx ./exports.ts && npm run create-index",
    "copy": "copyfiles -f  './src/types/*.ts' ./src/imports",
    "create-index": "ctix create -a ./src --noBackup --overwrite",
    "prepublishOnly": "npm run build",
    "ci": "npm ci"
  },
  "types": "./dist/index.d.ts",
  "files": ["dist"],
  "exports":   {
    ".": "./dist/types/index.js",
    "./*": "./dist/*/index.js",
    "./util": "./dist/util/index.js"
  },
  "license": "MIT",
  "devDependencies":   {
    "@types/node": "20.8.10",
    "copyfiles": "2.4.1",
    "ctix": "1.8.2",
    "ts-morph": "20.0.0",
    "tsx": "^3.14.0",
    "typescript": "5.0.2"
  },
  "engines":   {
    "node": "16.16.0",
    "npm": "8.11.0"
  }
}